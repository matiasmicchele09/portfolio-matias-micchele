---
const { es } = Astro.props
const hero = es.hero;
---
<section class="bg-main-bg h-full flex items-center justify-center text-center px-4">
    <div class="max-w-4xl w-full flex flex-col md:flex-row items-center justify-center gap-8" data-aos="fade-up">
      <!-- Avatar a la izquierda -->
      <div class="flex-shrink-0">
        <img src="./public/images/avatar-matias.png" alt="Avatar de MatÃ­as" class="w-64 h-96 rounded-4xl shadow-lg object-cover mx-auto" />
      </div>
      <!-- Texto a la derecha -->
      <div class="flex-1">
        <span class="text-text-main font-poppins text-2xl md:text-5xl font-bold mb-6" set:html={hero.message} />
        <p class="text-text-main font-inter text-lg md:text-xl mb-6">{hero.description}</p>
        <a href="#projects" class="font-inter inline-block bg-primary hover:bg-magenta text-text-main px-6 py-2 rounded-full text-lg font-semibold transition blink">{hero.btn_projects}</a>
        <a href="#projects" class="font-inter inline-block bg-primary hover:bg-magenta text-text-main px-6 py-2 rounded-full text-lg font-semibold transition blink ml-4">{hero.btn_cv}</a>
      </div>
    </div>
</section>