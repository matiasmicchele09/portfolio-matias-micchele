---
const { es } = Astro.props
const hero = es.hero;
---
<section class="bg-main-bg min-h-screen flex items-center justify-center text-center py-8 overflow-x-hidden">
    <div class="w-full flex flex-col md:flex-row items-center justify-center gap-8 px-6 md:px-24" data-aos="fade-up">
      <!-- Avatar a la izquierda -->
      <div class="flex-shrink-0">
        <img src="/images/avatar-matias.png" alt="Avatar de MatÃ­as" class="w-full max-w-xs md:w-64 md:h-96 rounded-3xl shadow-lg object-cover mx-auto" />
      </div>
      <!-- Texto a la derecha -->
      <div class="flex-1">
        <span class="text-text-main font-poppins text-lg md:text-5xl font-bold mb-6" set:html={hero.message} />
        <p class="text-text-main font-inter text-base md:text-xl mb-6">{hero.description}</p>
        <a href="#projects" class="w-full md:w-auto font-inter inline-block bg-primary hover:bg-magenta text-text-main px-6 py-2 rounded-full text-lg font-semibold transition blink">{hero.btn_projects}</a>
        <a href="#projects" class="w-full md:w-auto font-inter inline-block bg-primary hover:bg-magenta text-text-main px-6 py-2 rounded-full text-lg font-semibold transition blink mt-5 sx:mt-0 sx:ml-4 sm:mt-0 sm:ml-4">{hero.btn_cv}</a>
      </div>
    </div>
</section>