---
import "../styles/global.css";
import Analytics from '@vercel/analytics/astro';
const { lang, t } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<link rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.min.css"/>
		<meta name="generator" content={Astro.generator} />
		<title>{t.title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />	
    	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@160..700&family=Inter:wght@400;700&family=Poppins:wght@400;700&display=swap" rel="stylesheet"/>
	</head>
	<body>
		<slot />
		<Analytics/>
		<script
		 is:inline
		 src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.min.js">
		</script>

		<script is:inline>
		document.addEventListener("DOMContentLoaded", () => {
			AOS.init({
			offset: 120,
			duration: 400,
			once: false,
			mirror: true,
			});
		});
		</script>
		
	</body>
</html>
